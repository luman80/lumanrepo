@{
    ViewBag.Title = "Tables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tables</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                File Manager
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="btn-toolbar">
                            <div class="btn-group">
                                @{
                                    foreach (var drive in ViewBag.Drives)
                                    {
                                        <button class="btn btn-default"><i class="glyphicon glyphicon-hdd"></i> @drive.Name</button>
                                    }
                                }
                            </div>
                        </div>
                        <table class="table table-bordered table-striped table-hover" id="leftTable">
                            <thead><tr><th>Name</th><th>Extension</th><th>Size</th><th>Date</th></tr></thead>
                            <tbody>
                                <tr><td><i class="fa fa-folder"></i> ..</td><td></td><td>DIR</td><td>10/16/14 09:32</td></tr>
                                <tr><td><i class="fa fa-folder"></i> MyDocuments</td><td></td><td>DIR</td><td>10/16/14 09:32</td></tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <div class="btn-toolbar">
                            <div class="btn-group">
                                <button class="btn btn-default">x</button>
                                <button class="btn btn-default">y</button>
                                <button class="btn btn-default">x</button>
                            </div>
                            <div class="btn-group">
                                <button class="btn btn-default">4</button>
                                <button class="btn btn-default">5</button>
                                <button class="btn btn-default">6</button>
                            </div>
                        </div>
                        <table class="table table-hover table-bordered table-striped" id="rightTable">
                            <thead><tr><th>Name</th><th>Extension</th><th>Size</th><th>Date</th></tr></thead>
                            <tbody><tr><td><i class="fa fa-folder"></i> MyDocuments</td><td></td><td>DIR</td><td>10/16/14 09:32</td></tr></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
