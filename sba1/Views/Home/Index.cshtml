<script src="@Url.Content("~/bower_components/flot/jquery.flot.js")"></script>
<script src="@Url.Content("~/bower_components/flot/jquery.flot.pie.js")"></script>
<script src="@Url.Content("~/bower_components/flot/jquery.flot.resize.js")"></script>
<script src="@Url.Content("~/bower_components/flot/jquery.flot.time.js")"></script>
<script src="@Url.Content("~/bower_components/flot.tooltip/js/jquery.flot.tooltip.min.js")"></script>

<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<script src="~/signalr/hubs"></script>

<script src="@Url.Content("~/Scripts/overviews.js")"></script>